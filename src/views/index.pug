doctype html
html
  head
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(http-equiv="x-ua-compatible", content="ie=edge")

    link(rel='stylesheet', href='/assets/stylesheets/bootstrap.min.css')
    title
      | Cart View
  body
    div(class="container-fluid")

      div(class="jumbotron jumbotron-fluid")
        div(class="container")
          h1(class="display-3") Cart View
            p(class="lead") This is a simple page to display the output from the setup on the cart. This allows you to see which machine the cart is closest to and what are the tools available in the cart.</p>
          hr(class="my-4")
          p This page is built for a quick demo and auto-refreshes.

      div(class="row")
        div(class="col-sm-6")
          div(class="card")
            div(class="card-block")
              div(class="card-text")
                div(class="row")
                  div(class="col-md-6")
                    h4(class="card-title") Tool Cart
                    p Last Updated: #{since}
                  div(class="col-md-6")
                    span #{rackID}
                div(class="row")
                  div(class="col-md-6")
                    h5(class="machine-info") Machine Zone
                  div(class="col-md-6")
                    p #{zoneUUID}
                div(class="row")
                  div(class="col-md-3")
                    h5 Tools Found
                  div(class="col-md-9")
                    ul(class="list-group list-group-flush")
                      each tool in tags
                        li(class="list-group-item") #{tool}


    script(src='/assets/javascripts/bootstrap.min.js', type='text/javascript')
    script(src='/assets/javascripts/jquery-3.1.1.slim.min.js', type='text/javascript')
    script(src='/assets/javascripts/tether.min.js', type='text/javascript')

    script.
      setTimeout(function() {
        window.location.reload(true);
      }, 10000);
